{
"coc.preferences.formatOnSaveFileTypes": ["python"],
"python": {
  "jediEnabled": false,
  "linting": {
    "mypyEnabled": true
  }
},
"languageserver": {
  "ccls": {
    "command": "ccls",
    "filetypes": ["c", "cc", "cpp"],
    "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
    "initializationOptions": {
      "cache": {
        "directory": "/tmp/ccls"
      }
    }
  }
}
}
